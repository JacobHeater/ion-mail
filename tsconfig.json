{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "esnext",
    "outDir": "./bin",
    "noImplicitAny": true,
    "module": "commonjs",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strict": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}